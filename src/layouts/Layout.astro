---
import Header from '../components/Header.astro';
import "@fontsource/onest";
import InfoPrincipal from '../components/InfoPrincipal.astro';



---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="icon" type="image/svg+xml" href="/favicon.svg">
	<title>Portafolio Web</title>
</head>
<body>
	<div class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">

		<Header />
		<main>
			<InfoPrincipal />
			<slot />
		</main>
	</div>
	
</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: 'Onest variable', system-ui, sans-serif;
	}

	body {

		flex-direction: column;
		min-height: 100vh;
	}

	.background-overlay {
		inset: 0;
		-z-index: -10;
		background: radial-gradient(125% 125% at 50% 10%, #000 40%, #63e 100%);
		width: 100%;
		height: 100%;
	}



</style>
